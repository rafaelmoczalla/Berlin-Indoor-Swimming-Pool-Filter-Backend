{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "lib": ["es6", "dom"],
    "outDir": "out",
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "*": [
      "node_modules/*"
    ],
    "typeRoots": [ "./types", "./node_modules/@types"]
    }
  },

  "exclude": ["out", "node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
